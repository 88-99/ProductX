<h2>在庫受払帳</h2>
<%= form_with(model: @product, url: stocks_show_path, method: :get, local: true) do |form| %>
  <%= form.collection_select(:product_id, Product.all, :id, :name, prompt: "選択してください") %>
  <%= form.submit %>
<% end %>

<table>
  <tr>
    <th>区分</th>
    <th>日付</th> <!-- 表示が一項目分右にズレる -->
    <th>企業名</th>
    <th>数量</th>
    <th>単価</th>
    <th>在庫</th>
  </tr>
  <% amount = 0 %>
  <% @stock_details.each do | stock_detail | %>
    <tr>
      <% if stock_detail.try(:sale).nil? %>
        <td>仕入：<%= stock_detail.date_at_of_purchase_or_sale %></td>
        <td><%= stock_detail.name_of_purchase_or_sale %></td>
        <td><%= "#{stock_detail.quantity}個" %></td>
        <td><%= "#{stock_detail.price_of_purchase_or_sale}円" %></td>
        <td><%= "#{amount += stock_detail.quantity}個" %></td>
      <% else %>
        <td>売上：<%= stock_detail.date_at_of_purchase_or_sale %></td>
        <td><%= stock_detail.name_of_purchase_or_sale %></td>
        <td><%= "#{stock_detail.quantity}個" %></td>
        <td><%= "#{stock_detail.price_of_purchase_or_sale}円" %></td>
        <td><%= "#{amount -= stock_detail.quantity}個" %></td>
      <% end %>      
    </tr>
  <% end %>
</table>