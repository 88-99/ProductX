<h4>売上一覧</h4>
<p><%= notice %></p>
<%= link_to '新規登録', new_team_sale_path(@team) %>

<table class="table table-striped">
  <tr>
    <th>売上ID</th>
    <th>売上日</th>
    <th>得意先</th>
  </tr>
  <% @sales.each do |sl| %>
    <tr>
      <td><%= sl.id %></td>
      <td><%= sl.date_at %></td>
      <td><%= Client.find(sl.client_id).name %></td>
      <td><%= link_to '編集', edit_team_sale_path(@team, sl.id), class: "btn btn-success" %></td>
      <td><%= link_to "削除", team_sale_path(@team, sl.id), method: :delete, class: "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'メインメニュー', menus_path %>