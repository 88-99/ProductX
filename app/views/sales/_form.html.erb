<%= form_with(model: @sale, local: true) do |form| %>
  <% if @sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= @sale.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @sale.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="sale_code">
    <%= form.label :code %>
    <%= form.text_field :code, placeholder: "売上コード" %>
  </div>
  
  <div class="sale_date_at">
    <%= form.label :date_at %>
    <%= form.date_field :date_at, placeholder: "売上日" %>
  </div>

  <div class="sale_client_name">
    <%= form.label :client_name %>
    <%= form.collection_select(:client_id, Client.all, :id, :name, prompt: "選択してください") %>
  </div>

  <div class="sale_inputter">
    <p>入力者:<%= current_user.name %></p>
    <%= form.hidden_field :inputter, value: current_user.id %> <!-- パラメータで入力者のidを渡すため。-->
  </div>

  <%= form.fields_for :sale_details do |sd| %>
    <strong>
      <p>商品<%= "#{sd.index+1}" %></p>
    </strong>

    <%= sd.collection_select(:product_id, Product.all, :id, :name, prompt: "選択してください") %> <!-- @productsではundefined method `map' for nil:NilClassエラーになる。-->

    <div class="sd_quantity">
      <%= sd.label :個数 %>
      <%= sd.text_field :quantity %>
    </div>
  
    <div class="selling_price">
      <%= sd.label :単価 %>
      <%= sd.object.product.selling_price.to_i.to_s(:delimited) if sd.object.id.present?%>
    </div>

    <div class="regular_price">
      <%= sd.label :定価 %>
      <%= sd.object.product.regular_price.to_i.to_s(:delimited) if sd.object.id.present? %>
    </div>
  <% end %>

  <div class="total_amount">
      <%= form.label :合計金額 %>
      <%= @total_amount.to_i.to_s(:delimited) %><p>円</p>
  </div>

  <%= form.submit %>
<% end %>

<%= link_to 'メインメニュー', menus_path %>
<%= link_to '売上一覧', sales_path %>