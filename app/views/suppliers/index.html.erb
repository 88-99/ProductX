<h2>仕入先一覧</h2>
<p><%= notice %></p>
<%= link_to '新規登録', new_supplier_path %>

<table>
  <tr>
    <th>仕入先コード</th>
    <th>仕入先名</th>
    <th>電話番号</th>
    <th>FAX番号</th>
    <th>住所</th>
    <th>備考</th>
  </tr>
  <% @suppliers.each do |c| %>
    <tr>
      <td><%= c.code %></td>
      <td><%= c.name %></td>
      <td><%= c.phone_number %></td>
      <td><%= c.fax_number %></td>
      <td><%= c.address %></td>
      <td><%= c.remarks %></td>
      <td><%= link_to '編集', edit_supplier_path(c.id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'メインメニュー', menus_path %>

